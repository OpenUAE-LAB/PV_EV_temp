<div class="container">
    <div class="card">
        <div class="card-header">
            <strong>Invoice</strong> 
            <span class="float-right"> <strong>Status:</strong> Pending</span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6 class="mb-3">From:</h6>
                    <div>{{data.payee}}</div>
                    <div>University of Sharjah</div>
                    <div>Phone: +971 06 0000000</div>
                </div>
                <div class="col-sm-6">
                    <h6 class="mb-3">To:</h6>
                    <div>First Name: {{data.fname}}</div>
                    <div>Last Name: {{data.lname}}</div>
                    <div>Driver ID: {{data.driverId}}</div>
                </div>
            </div>
            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Item</th>
                            <th>Date</th>
                            <th class="right">Charging Session ID</th>
                            <th class="right">Watt Units</th>
                            <th class="right">Price Unit</th>
                            <th class="right">Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="center">1</td>
                            <th class="right">Charging Session</th>
                            <td class="left">{{data.date}}</td>
                            <td class="right">{{data.chargingSessionID}}</td>
                            <td class="center"> {{data.wattUnits}}</td>
                            <td class="center">{{data.pricePerUnit}}</td>
                            <td class="center">{{data.priceTotal}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5">
                </div>
                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="right">{{data.priceTotal}}</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>VAT (0%)</strong>
                                </td>
                                <td class="right">0</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong>{{data.priceTotal}}</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
